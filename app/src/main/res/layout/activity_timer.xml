<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TimePicker
        android:id="@+id/timePickerTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerBackground="@color/Beer"
        android:headerTimeTextAppearance="@style/Base.TextAppearance.AppCompat.Display2"
        android:layerType="software" />
    <TextView
        android:id="@+id/tm_duration"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="02:00"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tm_vibrate"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/ic_phone_vibrate"
            android:contentDescription="@string/blank" />

        <TextView
            android:id="@+id/minus10Min"
            android:gravity="center_vertical"
            android:text="10분↓"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/plus10Min"
            android:gravity="center_vertical"
            android:text="10분↑"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/minus30Min"
            android:gravity="center_vertical"
            android:text="30분↓"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/plus30Min"
            android:gravity="center_vertical"
            android:text="30분↑"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
